<div class="select-your-organization">
	{{#each rows}}
		<div class="row organization{{css_classes}}">
			<div class="col-lg-12">
				<h3>{{name}}</h3>
				{{#if pickups_paused}}
					<div class="alert alert-warning">
						<h4>{{name}} Donation Pickups Paused</h4>
						<p style="margin: 0;">During the COVID-19 outbreak, {{name}} will be temporarily pausing donation pickups. Once our normal pickup schedule resumes, we encourage you to try donating again. In the meantime, stay safe, and we appreciate your understanding.</p>
					</div>
					{{{desc}}}
				{{else}}
					<a class="btn btn-primary btn-lg btn-block" href="{{link}}">{{button_text}} <span class="glyphicon glyphicon-circle-arrow-right"></span></a>
					{{{desc}}}
				{{/if}}
			</div>
		</div>
		{{#if providers}}
		<div class="row organization providers{{css_classes}}">
			<div class="col-lg-12">
					<h5>Pick Up Providers in your area:</h5>
					<p><small>{{#each providers}}<span class="pick-up-provider">{{store_name}}</span>{{/each}}</small></p>
			</div>
		</div>
		{{/if}}
		<!--{{#if ads}}
			{{{ads}}}
		{{/if}}-->
		<hr />
	{{/each}}
</div>